case $choice in
    1)
        echo -e "${BLUE}${BOLD}â”â”â” CUSTOM BUILD â”â”â”${NC}"
        echo ""
        echo "Tell me what you want to create. Examples:"
        echo '  â€¢ "RSI divergence indicator with alerts"'
        echo '  â€¢ "Moving average crossover strategy"'
        echo '  â€¢ "Volume profile with point of control"'
        echo '  â€¢ "Bollinger Band squeeze detector"'
