    2)
        echo -e "${BLUE}${BOLD}â”â”â” VIDEO ANALYSIS â”â”â”${NC}"
        echo ""
        echo "I can analyze any YouTube video about a trading strategy or indicator"
        echo "and automatically create the Pine Script for you."
        echo ""
