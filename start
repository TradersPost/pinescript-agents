echo -e "${CYAN}3)${NC} ğŸ¯ Use a quick template"
echo -e "${CYAN}4)${NC} ğŸ“š View examples"
echo -e "${CYAN}5)${NC} â“ Learn what's possible"
echo ""
echo -e -n "${BOLD}Enter your choice (1-5): ${NC}"
read -r choice

