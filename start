CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m' # No Color

clear

echo -e "${BLUE}${BOLD}"
echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
echo "â•‘     ğŸš€ PINE SCRIPT DEVELOPMENT ASSISTANT                    â•‘"
echo "â•‘     Professional TradingView Script Creator                 â•‘"
echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo -e "${NC}"

# Check if first time user
FIRST_TIME=false
if [ ! -f ".claude/.onboarding_complete" ]; then
    FIRST_TIME=true
    mkdir -p .claude
    touch .claude/.onboarding_complete
    
    echo -e "${GREEN}${BOLD}Welcome! I see this is your first time using the system.${NC}"
    echo ""
    echo -e "${CYAN}This AI-powered assistant helps you create:${NC}"
    echo "  â€¢ Trading indicators (RSI, MACD, custom)"
    echo "  â€¢ Automated strategies with backtesting"
    echo "  â€¢ Complex visualizations and alerts"
    echo "  â€¢ Custom Pine Script solutions"
    echo ""
