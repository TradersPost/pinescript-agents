                python3 tools/video-analyzer.py "$video_url"
            else
                echo -e "${YELLOW}To analyze: Tell Claude 'Analyze this video: $video_url'${NC}"
            fi
        else
            echo -e "${YELLOW}No URL provided. You can tell Claude: 'Analyze [YouTube URL]'${NC}"
        fi
